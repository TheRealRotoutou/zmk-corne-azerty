#define BP_W    RIGHT_BRACKET // W
// Row 3
#define BP_A    A    // A
#define BP_U    S    // U
#define BP_I    D    // I
#define BP_E    F    // E
#define BP_COMM G    // ,
#define BP_C    H    // C
#define BP_T    J    // T
